<%# encoding: utf-8 %>

<%= form_for(@category) do |f| %>
  <% if @category.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@category.errors.count, "błąd") %> nie pozwolił na zapisanie kategorii:</h2>

      <ul>
      <% @category.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    Nazwa:<br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    Ikona (format JPG):<br />
    <%= f.file_field :icon, :accept => 'text/jpeg' %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
