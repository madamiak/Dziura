<%# encoding: utf-8 %>

<h1>Kategorie</h1>

<%= link_to 'Nowa Kategoria', new_category_path, :class => 'btn'  %>

<table>
 <thead>
  <tr>
    <th>Nazwa</th>
    <th>Ikona</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
 </thead>
<% @categories.each do |category| %>
  <tr>
    <td><%= category.name %></td>
    <td>
      <% if (category.icon.nil?) %>
        (brak)
      <% else %>
        <%= image_tag("/res/category_icon/#{category.id}") %>
      <% end %>
    </td>
    <td><%= link_to 'Pokaż', category %></td>
    <td><%= link_to 'Edytuj', edit_category_path(category) %></td>
    <td><%= link_to 'Usuń', category, :confirm => 'Jesteś pewien?', :method => :delete %></td>
  </tr>
<% end %>
</table>
