<%# encoding: utf-8 %>

<h1>Kategorie zgłoszeń</h1>

<%= link_to 'Nowa kategoria', new_category_path, :class => 'btn_dialog'  %>

<table>
 <thead>
  <tr>
    <th>Id</th>
    <th>Nazwa</th>
    <th>Ikona</th>
    <th>Utworzono</th>
    <th>Edycja</th>
    <th>Usuwanie</th>
  </tr>
 </thead>
 <tbody>
<% @categories.each do |category| %>
  <tr>
    <td><%= category.id %></td>
    <td><%= category.name %></td>
    <td>
      <% if (category.icon.nil?) %>
        (brak)
      <% else %>
        <%= image_tag("/res/category_icon/#{category.id}") %>
      <% end %>
    </td>
    <td><%= category.created_at %></td>
    <td><%= link_to 'Edytuj', edit_category_path(category), :class => 'btn_dialog' %></td>
    <td><%= link_to 'Usuń', category, :confirm => 'Jesteś pewien?', :method => :delete, :class => 'btn' %></td>
  </tr>
<% end %>
 </tbody>
</table>