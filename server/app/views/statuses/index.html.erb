<%# encoding: utf-8 %>
<h1>Listing statuses</h1>

<%= link_to 'Nowy Status', new_status_path, :class => 'btn'  %>

<table>
 <thead>
  <tr>
    <th>Nazwa</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
 </thead>
<% @statuses.each do |status| %>
  <tr>
    <td><%= status.name %></td>
    <td><%= link_to 'Pokaż', status %></td>
    <td><%= link_to 'Edytuj', edit_status_path(status) %></td>
    <td><%= link_to 'Usuń', status, :confirm => 'Jesteś pewien?', :method => :delete %></td>
  </tr>
<% end %>
</table>
