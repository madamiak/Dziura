<%# encoding: utf-8 %>

<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div class="notice ui-widget">
        <div class="ui-state-error ui-corner-all">
            <p>
                <span class="ui-icon ui-icon-alert" style="float: left; margin-right: .3em;"></span>
                <strong>Alert:</strong>
                <%= pluralize(@user.errors.count, "błąd") %> nie pozwolił na zapisanie użytkownika:
            </p>
            <ul>
            <% @user.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
            </ul>
        </div>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :login, "Login:" %><br />
    <%= f.text_field :login %>
  </div>
  <div class="field">
    <%= f.label :password, "Hasło:" %><br />
    <%= f.text_field :password %>
  </div>
  <div class="field">
    <%= f.label :role, "Rola:" %><br />
    <%= f.text_field :role %>
  </div>

  <div class="field">
    <%= f.label :unit, "Jednostka:" %><br />
    <%= collection_select(:issue, :unit_id, Unit.all, :id, :name) %>
  </div>

  <div class="actions">
    <%= f.submit "Zapisz", :id => 'submit_asynchro' %>
  </div>
<% end %>
