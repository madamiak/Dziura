<%# encoding: utf-8 %>

<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div class="notice ui-widget">
        <div class="ui-state-error ui-corner-all">
            <p>
                <span class="ui-icon ui-icon-alert" style="float: left; margin-right: .3em;"></span>
                <strong>Alert:</strong>
                <%= pluralize(@user.errors.count, "błąd") %> nie pozwolił na zapisanie useru:
            </p>
            <ul>
            <% @user.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
            </ul>
        </div>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :login %><br />
    <%= f.text_field :login %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.text_field :password %>
  </div>
  <div class="field">
    <%= f.label :role %><br />
    <%= f.text_field :role %>
  </div>
  
  <!--
  <div class="field">
    <%= f.label :unit %><br />
    <%= f.text_field :unit %>
  </div>
  -->
  
  <div class="actions">
    <%= f.submit :id => 'submit_asynchro' %>
  </div>
<% end %>
