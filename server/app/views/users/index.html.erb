<%# encoding: utf-8 %>
<h1>Listing users</h1>

<%= link_to 'Nowy użytkownik', new_user_path, :class => 'btn' %>

<table>
 <thead>
  <tr>
    <th>Login</th>
    <th>Hasło</th>
    <th>Rola</th>
    <th>Jednostka</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
</thead>
<% @users.each do |user| %>
  <tr>
    <td><%= user.login %></td>
    <td><%= user.password %></td>
    <td><%= user.role %></td>
    <td><%= user.unit %></td>
    <td><%= link_to 'Pokaż', user %></td>
    <td><%= link_to 'Edytuj', edit_user_path(user) %></td>
    <td><%= link_to 'Usuń', user, :confirm => 'Jesteś pewien?', :method => :delete %></td>
  </tr>
<% end %>
</table>
